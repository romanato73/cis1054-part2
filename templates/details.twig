{% extends "layouts/app.layout.twig" %}

{% block main %}
    <div class="container">
        <a href="javascript:void(0)" onclick="history.go(-1)" class="back-button">
            <i class="fas fa-chevron-left" style="margin-right: .5rem;"></i>
            Back
        </a>

        <div class="detail">
            <div class="detail-image">
                <img src="{{ dish.image }}" alt="{{ dish.name }}">
            </div>
            <div class="detail-info">
                <div class="detail-info-header">
                    <h1 class="dish-name">{{ dish.name }}</h1>
                    <form action="/favourites.php" method="post">
                        <input type="hidden" name="from" value="details">
                        <input type="hidden" name="dish_id" value="{{ dish.id }}">
                        <button type="submit" class="favourite-btn {{ dish.id in __favourites ? "in-list" : "" }}">
                            <i class="far fa-heart"></i>
                        </button>
                    </form>
                </div>
                <div class="dish-description">
                    {{ dish.description }}
                </div>
                <p>{{ dish.options }}</p>
            </div>
        </div>
    </div>
{% endblock %}